            binary_sensor.is_on: limit_switch_5
          then:
            - number.set:
                id: m_45m_pitch_wrist
                value: 0
            - lambda: |-
                id(m5_cumulative_movement_amount).publish_state(0);
                id(m5_last_movement_amount).publish_state(0);
                id(m4_cumulative_movement_amount).publish_state(0);
