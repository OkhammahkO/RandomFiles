                      id: uart_r
                      data: "4M-1000\r5M-1000\r"
                  - wait_until:
                        condition:
                          binary_sensor.is_on: limit_switch_5
                        timeout: 15s
                  - button.press: stop_wrist
                  - delay: ${home_delay}
                  - button.press: request_status_all_limit_switches_8char
                  - delay: ${home_delay}
      - if: 
