                  - delay: ${home_delay}
            - if:
                condition:
                  binary_sensor.is_off: limit_switch_2
                then:
                  - uart.write: 
                      id: uart_r
                      data: "2M-400\r"
                  - wait_until:
                        condition:
                          binary_sensor.is_on: limit_switch_2
                        timeout: 5s
                  - button.press: stop_m2_shoulder
