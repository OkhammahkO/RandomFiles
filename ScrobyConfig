    platform: tm1638
    id: tm1638_display
    stb_pin: 32 #White Wire
    clk_pin: 25 #Brown Wire
    dio_pin: 27 #Light Purple Wire
    intensity: 1
    update_interval: never
    lambda: |-
      it.print("        "); //Clear existing
      it.printf(0, id(screen_message).state.c_str()); //Screen messages pushed from other locations

