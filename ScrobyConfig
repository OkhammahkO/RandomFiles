    name: "Auto Moves Allowed"
    id: button_w_led
    pin: 
      number: GPIO33 #Orange Wire
      mode: INPUT_PULLDOWN
    on_press:
     then:
       - script.execute: rtttl_single_high_beep
    on_release:
     then:
       - script.execute: rtttl_single_high_beep

